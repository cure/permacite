{
  "manifest_version": 2,

  "name": "permacite",
  "short_name": "permacite",
  "description": "An extension for generating permalinks to case law in Google Scholar, for use in citations.",
  "version": "0.1",

  "icons": { "16": "permacite16.png",
             "48": "permacite48.png",
             "128": "permacite128.png" },

  "author": "Ward Vandewege",
  "homepage_url": "https://github.com/cure/permacite",

  "minimum_chrome_version": "43",

  "browser_action": {
    "default_icon": "permacite19.png",
    "default_popup": "popup.html",
    "default_title": "permacite"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ]
}
